{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es6", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["node", "firebase"]
  },
  "include": ["src/**/*", "src/types"]
}
